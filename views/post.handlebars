<div>
    <div data-id="{{post.id}}">
        <h2>{{title}}</h2>
        <p>Created by {{user.username}} on {{format_date date_created}}</p>
        <p>{{content}}</p>
    </div>
</div>

{{#if logged_in}}
<div>
    <form class="new-comment-form">
        <div>
            <label for="comment">Comment:</label>
            <input class="form-input" type="text" id="comment" name="comment" />
        </div>
        <div class="form-group">
            <button type="submit">Submit</button>
        </div>
    </form>
</div>
{{/if}}

{{#if comments.length}}
<div>
    {{#each comments as |comment|}}
    <div>
        <h4>{{comment.content}}</h3>
        <h4>- {{comment.user.username}} on {{format_date comment.date_created}}</h4>
    </div>
    {{/each}}
</div>
{{/if}}

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}