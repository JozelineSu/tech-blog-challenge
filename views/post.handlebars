<div>
    <div>
        <h2>{{title}}</h2>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
        <p>{{content}}</p>
    </div>
    <div>
        <form>
            <div>
                <label for="comment">Comment:</label>
                <input class="form-input" type="text" id="comment" name="comment" />
            </div>
            <div class="form-group">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>