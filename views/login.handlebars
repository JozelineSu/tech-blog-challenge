<div class="container">
    <h2 class="title">Login</h2>

    <form class="login-form">
      <div class="form-group">
        <label class="form-label" for="username-login">Username</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label class="form-label" for="password-login">Password</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button type="submit">Login!</button>
      </div>
    </form>
    <h4><a href="/signup">Sign up instead</a></h4>
</div>

<script src="./js/login.js"></script>
